{
    "folders":
    [
        {
            "follow_symlinks": true,
            "path": ".",
            "folder_exclude_patterns": [
                ".git",  
                "engine", 
                "hooks", 
                "bootstrap",
                "plugins",
                "platforms",
                "build",
                "templates",
                "www/js",
                "www/css"
            ]
        }
    ],
    "build_systems":
    [
        {
            "name": "Gulp",
            "shell_cmd": "gulp"
        }
    ],
    "settings": {
        "tab_size": 4,
        "translate_tabs_to_spaces": true
    },
    "default_line_ending": "unix"
}
