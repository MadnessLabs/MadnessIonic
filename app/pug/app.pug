doctype html
html(lang="en")
    head
        title=name
        link(rel="stylesheet" href=`${css.dir}${css.file}`)
        include ./favicon
        meta(charset="utf-8")
        meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width, minimal-ui")
        meta(name="mobile-web-app-capable" content="yes")
        meta(name="apple-mobile-web-app-status-bar-style" content=css.vars.theme.primary)
        //meta(http-equiv="Content-Security-Policy" content="default-src *; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'")
        if mobile
            script(src="cordova.js")
        script(src="js/build.js" async defer)
        if !mobile && google.analytics.key && !local
            script.
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

                ga('create', `${google.analytics.key}`, 'auto');
    body(ng-app=name)
        ion-nav-bar.bar-positive.has-tabs-top
            ion-nav-buttons(side='left')
                button.button.button-icon.icon.ion-navicon(ng-click="$root.toggleMenu()")
            // Run 'gulp add-page --n=search' and uncomment the line below
            //ion-nav-buttons(side="right")
                a.button.button-icon.icon.ion-android-search(ui-sref="search")
        ion-side-menus
            ion-side-menu(side="left" expose-aside-when="large" ng-show="$root.showSidebar")
                ion-content(scroll="false").has-header
                    ion-list
                        ion-item.item-icon-right.menu-toggle(ui-sref="home")
                            i.icon.ion-home
                            | Home
            ion-side-menu-content(ng-class="{'hide-sidebar': !$root.showSidebar}")            
                ion-nav-view
        